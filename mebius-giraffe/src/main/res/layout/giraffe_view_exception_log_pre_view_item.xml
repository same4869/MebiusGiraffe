<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:parentTag="RelativeLayout">

    <ImageView
            android:id="@+id/mExceptionPreviewIv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp" />

    <LinearLayout
            android:id="@+id/log_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/mExceptionPreviewIv"
            android:orientation="vertical">

        <TextView
                android:id="@+id/mExceptionPreviewTvLine2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/giraffe_black"
                android:textSize="13sp" />

        <TextView
                android:id="@+id/mExceptionPreviewTvLine1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/giraffe_black"
                android:textSize="14sp" />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/mExceptionPreviewIv"
            android:background="@color/giraffe_divider_line" />

</merge>